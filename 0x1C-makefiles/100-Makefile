# complete makefile with flags

CC= gcc
SRC= main.c holberton.c
OBJ= $(SRC:.c=.o)
NAME= holberton
RM= rm
CFLAGS= -Wall -Werror -Wextra -pedantic
.PHONY : all clean oclean fclean re

all: m.h ${OBJ}
	${CC} ${CFLAGS} ${OBJ} -o ${NAME}
clean:
	${RM} -f *~ ${NAME}
oclean:
	${RM} -f ${OBJ}
fclean:
	${RM} -f *~ ${NAME}
	${RM} -f ${OBJ}
re: oclean all
